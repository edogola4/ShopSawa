FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install development dependencies
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p logs uploads/products uploads/avatars uploads/categories uploads/reviews

# Expose port
EXPOSE 5001

# Start development server with nodemon
CMD ["npm", "run", "dev"]