# =============================================================================
# ShopSawa Frontend Environment Variables
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control - it contains sensitive information

# =============================================================================
# API Configuration
# =============================================================================
# Backend API base URL - adjust based on your backend server
REACT_APP_API_BASE_URL=http://localhost:5001/api/v1

# Image/File serving base URL - where uploaded files are served from
REACT_APP_IMAGE_BASE_URL=http://localhost:5001

# WebSocket URL for real-time features (if implemented)
REACT_APP_WS_URL=ws://localhost:5001

# =============================================================================
# Application Configuration
# =============================================================================
# Application name displayed in UI
REACT_APP_NAME=ShopSawa

# Application version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENVIRONMENT=development

# Debug mode (enables detailed logging)
REACT_APP_DEBUG=true

# =============================================================================
# Feature Flags
# =============================================================================
# Enable Progressive Web App features
REACT_APP_ENABLE_PWA=true

# Enable analytics tracking
REACT_APP_ENABLE_ANALYTICS=false

# Enable dark mode support
REACT_APP_ENABLE_DARK_MODE=true

# Enable offline support
REACT_APP_ENABLE_OFFLINE=true

# Enable push notifications
REACT_APP_ENABLE_NOTIFICATIONS=false

# Enable service worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# Security Configuration
# =============================================================================
# Content Security Policy nonce (auto-generated if not set)
REACT_APP_CSP_NONCE=

# Enable HTTPS redirect (production only)
REACT_APP_FORCE_HTTPS=false

# Session timeout in minutes
REACT_APP_SESSION_TIMEOUT=30

# =============================================================================
# M-Pesa Configuration (Read-only for frontend)
# =============================================================================
# These are display-only values, actual payments handled by backend
REACT_APP_MPESA_PAYBILL=174379
REACT_APP_MPESA_DISPLAY_NAME=ShopSawa

# =============================================================================
# UI/UX Configuration
# =============================================================================
# Default items per page for product listings
REACT_APP_ITEMS_PER_PAGE=12

# Maximum items in cart
REACT_APP_MAX_CART_ITEMS=50

# Search debounce delay in milliseconds
REACT_APP_SEARCH_DEBOUNCE=300

# Image lazy loading offset in pixels
REACT_APP_LAZY_LOAD_OFFSET=100

# =============================================================================
# Performance Configuration
# =============================================================================
# Enable code splitting
REACT_APP_ENABLE_CODE_SPLITTING=true

# Enable image optimization
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true

# Cache timeout in milliseconds
REACT_APP_CACHE_TIMEOUT=300000

# =============================================================================
# External Services (Optional)
# =============================================================================
# Google Analytics ID (if analytics enabled)
REACT_APP_GA_ID=

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=

# OneSignal App ID for push notifications
REACT_APP_ONESIGNAL_APP_ID=

# =============================================================================
# Development Configuration
# =============================================================================
# Show development tools in UI
REACT_APP_SHOW_DEV_TOOLS=true

# Enable React Developer Tools
REACT_APP_ENABLE_REACT_DEVTOOLS=true

# Mock API responses (for development without backend)
REACT_APP_MOCK_API=false

# =============================================================================
# Production Overrides
# =============================================================================
# These values are typically set in production deployment

# Production API URL
# REACT_APP_API_BASE_URL=https://api.shopsawa.com/api/v1

# Production Image URL
# REACT_APP_IMAGE_BASE_URL=https://cdn.shopsawa.com

# Disable debug in production
# REACT_APP_DEBUG=false

# Enable analytics in production
# REACT_APP_ENABLE_ANALYTICS=true

# Enable HTTPS redirect in production
# REACT_APP_FORCE_HTTPS=true