{
  "name": "frontend",
  "version": "1.0.0",
  "description": "ShopSawa E-commerce Frontend - A modern React-based storefront",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "antd": "^5.26.7",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^12.23.12",
    "inter-ui": "^4.1.1",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "react-toastify": "^11.0.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.15",
    "eslint-config-prettier": "^9.0.0",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:admin": "PORT=3001 REACT_APP_ADMIN_ONLY=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "dev": "REACT_APP_DEBUG=true react-scripts start",
    "build:analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "deploy:staging": "npm run build && echo 'Deploy to staging'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "ecommerce",
    "react",
    "frontend",
    "shopsawa",
    "tailwindcss",
    "responsive"
  ],
  "author": "Brandon <brandon@shopsawa.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edogola4/frontend.git"
  }
}
